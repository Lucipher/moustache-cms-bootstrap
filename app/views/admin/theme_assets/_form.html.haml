= form_for([:admin, @theme_asset], :html => {:class => "site_prop", :multipart => true, :autocomplete => "off"}) do |f|
  = render :partial => "shared/error_messages", 
           :locals => { :target => @theme_asset }
  %fieldset
    = foldable_fieldset 'General' do
      = render :partial => 'form_general_fields', :locals => { :f => f }
    = render :partial => 'theme_asset_type', :locals => { :f => f }
    = render :partial => 'form_tag_attrs', :object => f
    = render :partial => 'form_submit', :locals => { :f => f, :button_label => button_label }

