= foldable_fieldset 'General' do
  %ol.form_fields
    - unless @theme_asset.new_record?
      %li
        = f.label :name, "Name"
        = f.text_field :name
      %li
        = f.label :description
        = f.text_area :description, :cols => "50", :rows => "3"   
      %li
        = render :partial => 'form_custom_fields', :locals => { :f => f }
    - else
      %li
        = render :partial => 'theme_asset_type', :locals => { :f => f }
    %li
      = render :partial => 'form_submit', :locals => { :f => f, :button_label => button_label }

