%tr{:id => "#{image.name}_image", :class => "#{cycle('even', 'odd', :name => 'table_list')}"}
  %td.name= link_to image.name, [:edit, :admin, image]
  - if can? :destroy, image 
    %td.delete= link_to "Delete", [:admin, image], :method => :delete, :confirm => "Are you sure you want to delete the image theme file #{image.name}", :class => "delete"

