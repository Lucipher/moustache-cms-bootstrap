#content_header_wrapper
  %h2 Edit Theme Asset <b>#{@theme_asset.name}</b>

  - if can?(:destroy, @theme_asset) && !@theme_asset.new_record?
    %div{:id => "delete_theme_asset", :class => "delete"}
      = link_to "Delete Theme Asset", [:admin, @theme_asset], :confirm => "Are you sure you want to delete the layout #{@theme_asset.name}", :method => :delete, :class => "action delete"

= render :partial => "form",  
         :locals => { :theme_asset => @theme_asset, :button_label => "Update Theme Asset" }
