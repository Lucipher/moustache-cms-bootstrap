<%= content_for(:title) { "Login" } %>
<div class="row">
  <div class="span6 offset3">
    <h1><%= @current_site.name %></h1>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :id => "login") do |f| %>
      <legend>Login</legend>

      <%= f.label :email %>
      <%= f.email_field :email, :tabindex => '1' %>        

      <%= f.label :password %>
      <%= f.password_field :password, :tabindex => '2' %>

      <%= f.label :remember_me, :class => "checkbox" do %>
        <%= f.check_box :remember_me %>
        Remember me
      <% end %>

      <%= f.submit "Sign In", :class => "btn btn-large" %>
      <%= render :partial => "devise/shared/links" %>
    <% end %>
  </div>
</div>