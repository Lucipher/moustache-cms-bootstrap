#user
  %ul
    %li#user_header
      %div Username
      %div Role
      %div Delete
  - @users.each do |user|
    %li{ :id => "#{user.puid}"}
      %div= link_to user.puid, edit_admin_user_path(user)
      %div= user.role 
      - if can? :destroy, user
        %div.destroy= button_to "delete", admin_user_path(user), :method => :delete, :confirm => "Are you sure you"

#add_user
- if admin?
  %ul#new_user
    %li= link_to "New User", new_admin_user_path