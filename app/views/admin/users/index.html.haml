%table{:id => "users"}
  %thead
    %tr
      %th.bold Username
      %th.bold Role
      %th.bold Delete
  %tbody 
  - @users.each do |user|
    %tr{:id => user.puid}
      %td= link_to user.puid, edit_admin_user_path(user)
      %td= user.role 
      %td.destroy= button_to "delete", admin_user_path(user), :method => :delete, :confirm => "Are you sure you want to delete the user #{user.puid}" 

- if admin?
  %ul#new_user
    %li= link_to "New User", new_admin_user_path