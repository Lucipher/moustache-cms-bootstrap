.accordion
  .accordion-group
    .accordion-heading
      %a.accordion-toggle{:data => {:toggle => "collapse", :target => "#advanced_fields"}} 
        Advanced Options
    #advanced_fields.accordion-body.collapse
      .accordion-inner
        = f.label :permalink
        = f.text_field :permalink

        = f.label :tag_list
        = f.text_field :tag_list

        = f.label :img_url, "Associated Image URL for Article"
        = f.text_field :img_url

        %p.label_for Associated Date for Article
        = f.datetime_select :date

        = f.label :set_date, :class => "checkbox" do
          = f.check_box :set_date
          Set the date time for this article
