.accordion
  .accordion-group
    .accordion-heading
      %a.accordion-toggle{:data => {:toggle => "collapse", :target => "#author_fields"}} 
        Authors
    #author_fields.accordion-body.collapse
      .accordion-inner
        - if @article.authors
          = f.label :author
          = f.collection_select :author_ids, Author.all_from_current_site(@current_site).order_by(:firstname.asc), :id, :full_name, {include_blank: true}
