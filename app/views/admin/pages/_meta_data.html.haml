#page_meta_data{:class => "foldable"}
  %fieldset
    %legend Page Meta Data<span class="fold_arrow rotate"></span>
    %ul.form_fields
      = f.fields_for :meta_tags do |builder|
        %li  
          = builder.label :content, "#{builder.object.name}"
          = builder.text_field :content
          = manage_meta_tag @page, builder.object
      %li
        = link_to "Add Meta Tag", [:new, :admin, @page, :meta_tag]
