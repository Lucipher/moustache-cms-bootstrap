#content_inner_wrapper
  = render :partial => "shared/flash_notice"

  = form_for([:admin, page], :html => { :class => "site_prop", :autocomplete => :off }) do |f|
    = render :partial => "shared/error_messages", 
             :locals => { :target => page }
    = render :partial => "general", :locals => {:f => f}
    = render :partial => "advanced_options", :locals => {:f => f}
    = render :partial => "meta_data", :locals => {:f => f}
    = render :partial => "editors", :locals => {:f => f, :page => page}
    = render :partial => "page_parts", :locals => {:f => f}
    %fieldset
      %ul.form_fields
        %li
          = f.submit button_label, :class => "submit"
          = link_to "Cancel", [:admin, :pages], :class => "cancel"
