.accordion
  .accordion-group
    .accordion-heading
      %a.accordion-toggle{:data => {:toggle => "collapse", :target => "#page_editors_fields"}} 
        Page Editors
    #page_editors_fields.accordion-body.collapse
      .accordion-inner
        - User.all_from_current_site(@current_site).asc(:username).each do |user|
          .editor_field.inline.form-inline.block-controls
            = check_box_tag "page[editor_ids][]", user.id, page.editor_ids.include?(user.id), :id => "editor_id_#{user.username}"
            = label_tag "editor_id_#{user.username}]", user.username.downcase
