.accordion
  .accordion-group
    .accordion-heading
      %a.accordion-toggle{:data => {:toggle => "collapse", :target => "#advanced_fields"}} 
        Advanced Options
    #advanced_fields.accordion-body.collapse
      .accordion-inner
        = f.label :slug, "Slug"
        = f.text_field :slug

        = f.label :full_path, "Full Path"
        = f.text_field :full_path

        = f.label :breadcrumb, "Breadcrumb"
        = f.text_field :breadcrumb

        = f.label :tag_list
        = f.text_field :tag_list