.accordion
  .accordion-group
    .accordion-heading
      %a.accordion-toggle{:data => {:toggle => "collapse", :target => "#general_fields"}} 
        General
    #general_fields.accordion-body.collapse.in
      .accordion-inner
        = f.label :parent_id
        = f.collection_select :parent_id, Page.all_from_current_site(@current_site).order_by(:title, :asc), :id, :title, { :include_blank => true, :selected => parent_selected(@parent_page) }

        = f.label :title, "Title<abbr title='required' class='required'>*</abbr>".html_safe
        = f.text_field :title

        = f.label 'layout_id', "Layout<abbr title='required' class='required'>*</abbr>".html_safe
        = f.collection_select :layout_id, Layout.all_from_current_site(@current_site), :id, :name, :prompt => true
        
        = f.fields_for :current_state do |builder|
          = builder.label 'name', "Status<abbr title='required' class='required'>*</abbr>".html_safe
          = builder.collection_select :name, CurrentState.all, :id, :name
