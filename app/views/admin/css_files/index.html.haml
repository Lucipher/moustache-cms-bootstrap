#css_files
  #h3 Media Files
  %ul
    - @css_files.each do |css|
      %li{ :id => "#{css.name}"}
        %div= link_to css.name, edit_admin_css_file_path(css)
        %div.delete= button_to "delete", admin_css_file_path(css), :method => :delete, :confirm => "Are you sure you want to delete the css file #{css.name}"
        
#add_css_file
  %ul#new_css_file
    %li= link_to "Add Css File", new_admin_css_file_path