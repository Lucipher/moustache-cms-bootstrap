%tr{:class => "#{cycle('even', 'odd')}"}
  %td.name= link_to theme_collection.name, [:admin, theme_collection]
  - if can? :destroy, theme_collection
    %td.delete= link_to "Delete", [:admin, theme_collection], :method => :delete, :confirm => "Are you sure you want to delete the asset collection #{theme_collection.name}?", :class => "delete"
