= form_for([:admin, @theme_collection], :html => {:class => "site_prop", :autocomplete => "off" }) do |f|
  = render :partial => "shared/error_messages", 
           :locals => { :target => @theme_collection }    
  .accordion
    .accordion-group
      .accordion-heading
        %a.accordion-toggle{:data => {:toggle => "collapse", :target => "#general_fields"}} 
          General
      #general_fields.accordion-body.collapse.in
        .accordion-inner
          = f.label :name
          = f.text_field :name 
          #submit_fields.form-actions
            = f.submit button_label, :class => "submit btn btn-success"
            = link_to "Cancel", [:admin, :theme_collections], :class => "cancel"
