%ol.form_fields
  %li 
    = f.label :name, "Name<abbr title='required' class='required'>*</abbr>".html_safe
    = f.text_field :name
  %li 
    = f.label :content, "Content<abbr title='required' class='required'>*</abbr>".html_safe
    = f.text_area :content, :class => "code"
  %li
    = f.submit button_label, :class => "submit"
    = f.submit "Save and Continue Editing", :class => "submit"
    = link_to "Cancel", [:admin, :layouts], :class => "cancel"
