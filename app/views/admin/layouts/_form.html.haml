#content_inner_wrapper
  = form_for([:admin, layout], :html => {:class => "site_prop", :autocomplete => :off}) do |f|
    = render :partial => "shared/error_messages",  
             :locals => { :target => layout }
    %fieldset
      = f.label :name, "Name"
      = f.text_field :name
    %fieldset
      = f.label :content, "Content"
      %code.html
      = f.text_area :content, :cols => "50", :rows => "30"
    %fieldset 
      = f.submit button_label, :class => "submit"
      = f.submit "Save and Continue Editing", :class => "submit"
      = link_to "Cancel", [:admin, :layouts], :class => "cancel"
