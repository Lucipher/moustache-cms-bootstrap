= form_for([:admin, layout]) do |f|
  = render :partial => "shared/error_messages",  
           :locals => { :target => layout }
  %fieldset
    = f.label :name, "Name"
    = f.text_field :name
  %fieldset
    = f.label :content, "Content"
    %code.html
      = f.text_area :content, :cols => "50", :rows => "30"
  %fieldset 
    = f.submit button_label
    = link_to "Cancel", [:admin, :layouts]