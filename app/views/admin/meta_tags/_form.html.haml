= form_for([:admin, @object, @meta_tag], :html => { :class => "site_prop", :autocomplete => :off }) do |f|
  = render :partial => "shared/error_messages", :locals => {:target => @object}
  %fieldset
    %ul.form_fields
      %li
        = f.label :name
        = f.text_field :name
      %li
        = f.label :content
        = f.text_field :content
      %li
        = f.submit button_label, :class => "submit"
        = link_to "cancel", [:edit, :admin, @object], :class => "cancel"
