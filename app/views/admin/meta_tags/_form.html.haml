= form_for([:admin, @base_class, @meta_tag], :html => { :class => "site_prop", :autocomplete => :off }) do |f|
  = render :partial => "shared/error_messages", :locals => {:target => @meta_tag}
  .accordion
    .accordion-group
      .accordion-heading
        %a.accordion-toggle{:data => {:toggle => "collapse", :target => "#general_fields"}} 
          General
      #general_fields.accordion-body.collapse.in
        .accordion-inner
          = f.label :name
          = f.text_field :name

          = f.label :content
          = f.text_field :content
  .form-actions        
    = f.submit button_label, :class => "submit btn btn-sucess"
    = link_to "cancel", [:edit, :admin, @base_class], :class => "cancel"
