#content_header_wrapper
  %h2 Snippets

  - if admin?
    %div{:id => "new_snippet", :class => "create"}
      = link_to "New Snippet", new_admin_snippet_path, :class => "action"

#content_inner_wrapper
  = render :partial => "shared/flash_notice"

  %table{:class => "info snippets"}
    %tr
      %th Snippet Name
      %th
    - @snippets.each do |snippet|
      %tr{:class => "#{cycle('even', 'odd')}"}
        %td.name= link_to snippet.name edit_admin_snippet_path(snippet)
        - if can? :destroy, snippet
          %td.delete= link_to "Delete", admin_snippet_path(snippet), :method => :delete, :confirm => "Are you sure you want to delete the snippet #{snippet.name}", :class => "delete"
