!!!5
%html
  %head{:charset => "UTF-8"}
    %title Etherweb Admin
    = stylesheet_link_tag "master.css", :media => "screen, projection"
    
    = javascript_include_tag :defaults
   
    = javascript_include_tag "jquery.min"
    
    = javascript_include_tag "ace/src/ace"
    = javascript_include_tag "ace/src/mode-html"
    = javascript_include_tag "ace/src/mode-textile"
    = javascript_include_tag "ace/src/theme-textmate"
    = javascript_include_tag "ace/src/keybinding-vim"    
    = javascript_include_tag "application"

    = csrf_meta_tag
  %body{:class => body_id_set}
  #wrapper
    #header
      %h1#site_name
        = link_to "#{Site.first.name.humanize} Site", "/" 
      = render :partial => "layouts/admin/welcome"
    #main
      = render :partial => "layouts/admin/nav"
      #content
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
        = yield
  #footer
