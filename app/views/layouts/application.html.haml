!!! 5
%html
  %head{:charset => "UTF-8"}
    %title= "#{@current_site.name.titleize} - #{yield :title}"|| "HandlebarCMS"
    = stylesheet_link_tag "login"
    %link{:href => 'http://fonts.googleapis.com/css?family=Droid+Serif:700,400,700italic', :rel => 'stylesheet', :type => 'text/css'}
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
  - flash.each do |name, msg|
    = content_tag :div, msg, :id => "flash_#{name}"
  #wrapper
    = yield
