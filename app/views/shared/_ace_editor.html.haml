%p.label_for.ace_label Content
%select.line_wrap
  = grouped_options_for_select({'Line Wrap' => ['No wrap', 'Soft wrap']})
.doc
  - if @article.nil?
    = link_to 'Available Tags', '/mustache_tags.html', :class => 'mustache_tags fancybox.iframe documentation btn btn-mini btn-warning'
  = link_to 'Markdown', 'http://daringfireball.net/projects/markdown/', :class => 'markdown fancybox.iframe documentation btn btn-mini btn-info'
  = link_to 'Textile', 'http://textile.thresholdstate.com', :class => 'textile fancybox.iframe documentation btn btn-mini btn-inverse'

- if builder
  %pre{:id => "#{builder.object.id}_content", :class => "page_part_content"}= builder.object.content
- else
  %pre#asset_content= asset
